<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ボタンタップ時 定義 -->
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="1px"
                android:color="@color/LightGrey" />
            <gradient 
                android:startColor="@color/DarkGrey"
                android:endColor="@color/DarkerGrey"
                android:angle="-90"/>
            <corners 
                android:radius="0dp"/>
        </shape>
        
    </item>

    <!-- ボタン通常表示時 定義 -->
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="1px"
                android:color="@color/Gainsboro" />
            <gradient 
                android:startColor="@color/Silver"
                android:endColor="@color/DimGrey"
                android:angle="-90"/>
            <corners 
                android:radius="0dp"/>
        </shape>
    </item>
</selector>